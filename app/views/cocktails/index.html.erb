<%= render 'navbar' %>
<%= render 'banner' %>

<div class="container" background-color: $gray>

<br> </br>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')"> 
          <div class="card-description">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail), class: 'card-link' %></h2>
          </div>
        </div>
        <br></br>
      </div>
    <% end %>
  </div>
</div>
</div>

<%= render 'footer' %>