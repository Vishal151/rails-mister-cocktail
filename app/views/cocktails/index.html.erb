<%= render 'banner' %>

<br> </br>

<div class="container">
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  <br> </br>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
      <container class="flex-box justify: center">
        <div class="card-product" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/500x400/?cocktail');">
          <div class="card-description">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail), class: 'card-link' %></h2>
          </div>
        </div>
      </container>
      </div>
    <% end %>
  </div>
</div>